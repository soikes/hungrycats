<% provide(:title, 'Login') %>
<div class='row'>
  <div class='col-xs-12'>
    <div class='login-container'>
      <h1>login</h1>
      
      <%= form_tag '/login' do %>

        <%= email_field_tag "session[email]", nil, :placeholder => 'email' %>

        <%= password_field_tag "session[password]", nil, :placeholder => 'password' %>

        <%= submit_tag "login" %>
      <% end %>
    </div>
  </div>
</div>
